        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_CreateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

</LinearLayout>